{%- style -%}
  @media screen and (min-width: 568px) {
  .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    color: #2C2A29;

  }

  .block-text-container {
    text-align: center;
    margin-bottom: 8px;
  }

  .block-text {
    display: block;
    font-family: Lora;
    font-size: 40px;
    font-weight: 400;
    line-height: 54px;
    width: 100%;
    word-spacing: 0.05em;
    letter-spacing: -0.01em;
  }

  .block-text p {
    margin: 0 !important;
  }

  .block-image-container {
    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: nowrap;
    padding: 41px 0;
  }

  .image-class {
    width: 379px;
    height: 617.89px;
    border-radius: 16px;
  }

  .block-subtext-container{
    text-align: center;
    width: 810px;
  }

    .block-subtext p {
    margin: 0 !important;
      padding-bottom: 14px;
    }

  .block-subtext{
    font-family: Lato;
    font-size: 16px;
    font-weight: 400;
    line-height: 22px;
    word-spacing: 0.04em;
    letter-spacing: -0.006em;
  }
}

   @media screen and (max-width: 567px) {
    .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 567px;
    color: #2C2A29;
    padding: 4px;

  }

  .block-text-container {
    text-align: center;
  }

  .block-text {
    display: block;
    font-family: Lora;
    font-size: 32px;
    font-weight: 400;
    line-height: 42px;
    max-width: 567px;
  }

  .block-image-container {
    display: flex;
    justify-content: center;
    gap: 4px;
    flex-wrap: nowrap;
    margin: 27px 0px 5px 0px;
  }

  .image-class {
    width: calc(100% - 2px);
    height: 289px;
    border-radius: 16px;
  }

  .block-subtext-container{
    text-align: center;
    max-width: 567px;
  }

  .block-subtext{
    font-family: Lato;
    font-size: 14px;
    font-weight: 400;
    line-height: 22px;
    text-align: center;
  }
  }

{%- endstyle -%}

<div class="main-container" id="{{ section.id }}">
  <div class="block-text-container">
    {% for block in section.blocks %}
      {% if block.type == 'heading' %}
        <div class="block-text">
          {{ block.settings.heading }}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="block-image-container">
    {% for block in section.blocks %}
      {% if block.type == 'block_image' %}
        <div class="block-image">
          {{ block.settings.image_with_text_image | image_url: width:379 | image_tag: class:"image-class" }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="block-subtext-container">
    {% for block in section.blocks %}
      {% if block.type == 'subtext' %}
        <div class="block-subtext">
          {{ block.settings.subtext | newline_to_br }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>


